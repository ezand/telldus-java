	</dependencies>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.ezand.telldus</groupId>
				<artifactId>telldus-core</artifactId>
				<version>${telldus-core.version}</version>
			</dependency>

			<dependency>
				<groupId>org.apache.commons</groupId>
